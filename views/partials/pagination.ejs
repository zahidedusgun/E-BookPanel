<% if (totalPages > 1) { %>
  <nav class="mt-5">
      <ul class="pagination justify-content-start">
          <li class="page-item">
              <a href="?page=0" class="page-link" style="background-color: #132C65; color: yellow;">Ä°lk Sayfa</a>
          </li>

          <% for (let i = 0; i < totalPages; i++) { %>
