<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body>
    <%- include("../partials/nav") %>

    <div class="container mt-3">
      <div class="row">
        <div class="col-md-12 mt-3">
          <form method="post" enctype="multipart/form-data">
            <input
              type="hidden"
              class="form-control"
              id="name"
              name="image"
              value="<%= book.image %>"
            />
            <h4>Editing of Book</h4>
            <div class="row mb-3">
              <label for="name" class="col-sm-2 col-form-label"
                >Title of Book</label
              >
              <div class="col-sm-8">
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  value="<%= book.name %>"
                />
              </div>
            </div>
            <div class="row mb-3">
              <label for="description" class="col-sm-2 col-form-label"
                >Description</label
              >
              <div class="col-sm-8">
                <textarea id="editor" name="description" class="form-control" rows="10">
<%= book.description %>"</textarea
                >
              </div>
            </div>
            <div class="row mb-3">
              <label for="image" class="col-sm-2 col-form-label">Image</label>
              <div class="col-sm-8">
                <img
                  src="/static/images/<%= book.image %>"
                  alt=""
                  style="width: 100px"
                />
                <input
                  type="file"
                  class="form-control"
                  id="image"
                  name="image"
                />
              </div>
            </div>
            <div class="row mb-3">
              <label for="category" class="col-sm-2 col-form-label"
                >Category</label
              >
              <div class="col-sm-8">
                <select name="category" id="category" class="form-select">
                  <option value="-1">Select</option>
                  <% categories.forEach(category => { %>
                  <option value="<%= category.categoryid %>">
                    <%= category.category_name %>
                  </option>
                  <% }) %>
                </select>
                <script>
                  document.querySelector("#category").value =
                    "<%= book.categoryid%>";
                </script>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-sm-8 offset-sm-2">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    id="home"
                    name="home"
                  />
                  <label class="form-check-label" for="home"> Home Page </label>
                </div>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-sm-8 offset-sm-2">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    id="accept"
                    name="onay"
                  />
                  <label class="form-check-label" for="accept"> Accept </label>
                </div>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-sm-8 offset-sm-2">
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script src="https://cdn.ckeditor.com/ckeditor5/41.1.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .catch( error => {
                console.error( error );
            } );
    </script>
  </body>
</html>
