<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
</head>
<body>
    
    <%- include("../partials/nav")  %> 

    <div class="container mt-3">
          <div class="row">
            <div class="col-md-12 mt-3">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">id</th>
                            <th style="width: 150px;">rolename</th>
                            <th>Number of users</th>
                            <th style="width: 130px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% roles.forEach(role => { %>
                            <tr>
                                <td>#<%= role.roleId %> </td>
                                <td>
                                   <%= role.roleName %> 
                                </td>
                                <td>
                                    <%= role.user_count %> 
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="/admin/roles/<%= role.roleId %>">edit</a>
                                    <a class="btn btn-sm btn-danger" href="/admin/role/delete/<%= role.roleId %>">delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
          </div>
    </div>
</body>
</html>



